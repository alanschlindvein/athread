{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "lib": ["es2017"],
    "removeComments": true,
    "noEmitHelpers": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "es2016",
    "typeRoots": ["node_modules/@types"],
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
